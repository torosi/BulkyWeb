@model Product

<div class="container">
    <form method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Delete Product</h2>
                <hr />
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="Title" class="p-0"></label>
                <input asp-for="Title" class="form-control" disabled />
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="Description" class="p-0"></label>
                <textarea asp-for="Description" class="form-control" disbabled></textarea>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="ISBN" class="p-0"></label>
                <input asp-for="ISBN" class="form-control" disabled />
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="Author" class="p-0"></label>
                <input asp-for="Author" class="form-control" disabled />
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="ListPrice" class="p-0"></label>
                <input asp-for="ListPrice" class="form-control" disabled />
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="Price" class="p-0"></label>
                <input asp-for="Price" class="form-control" disabled />
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="Price50" class="p-0"></label>
                <input asp-for="Price50" class="form-control" disabled />
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="Price100" class="p-0"></label>
                <input asp-for="Price100" class="form-control" disabled />
            </div>
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">Back to list</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{
        // because this partial view is related to scripts, we need to add in this @section, otherwise you can just add above
        // partial view in shared - this just includes javascript libraries for validation
        <partial name="_ValidationScriptsPartial" />
 // now the validation will be displayed before you hit submit
    }
}